<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        レコード編集
      </h1>
    </div>
  </div>
</section>

<% if @recipe.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @recipe.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @recipe do |f| %>
            <div class="field">
            <%= f.label :title, "Title", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :body, "Description", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>
          
          <div class="field">
            <%= f.label :bestsong, "Bestsong", class: "label" %>
            <%= f.text_field :bestsong, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :bpm, "BPM", class: "label" %>
            <%= f.text_field :bpm, class: "input" %>
          </div>
          
          <div class="field">
            <%= f.label :Genre, "Genre", class: "label" %>
            <%= f.select :Genre, {'Soul': 1,'Funk': 2,'Dub': 3,'R&B': 4,'Citypop': 5}, {include_blank: '選択してください'}, { class: 'input' , required: true }%>
          </div>
          

          <div class="field">
            <%= f.label :image, "Record Jacket", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

            <%= f.submit "投稿", class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>